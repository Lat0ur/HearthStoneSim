<UserControl x:Class="HearthStoneSim.View.CardInPlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:HearthStoneSim.ViewModel"
             xmlns:view="clr-namespace:HearthStoneSim.View"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=viewModel:CardViewModel, IsDesignTimeCreatable=True}">

    <!--<UserControl.DataContext>
       <viewModel:TableViewModel/>
    </UserControl.DataContext>-->

    <!--<UserControl.Resources>
