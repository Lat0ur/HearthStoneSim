<UserControl x:Class="HearthStoneSim.View.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:HearthStoneSim.View"
             xmlns:viewModel="clr-namespace:HearthStoneSim.ViewModel"
             xmlns:dd="urn:gong-wpf-dragdrop"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <viewModel:TableViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <ListBox Background="{x:Null}" ItemsSource="{Binding Cards}"
                 dd:DragDrop.IsDragSource="True"
                 dd:DragDrop.IsDropTarget="True"
                 dd:DragDrop.UseDefaultDragAdorner="True"
                 dd:DragDrop.DragMouseAnchorPoint="0.5,0.5"
                 dd:DragDrop.DefaultDragAdornerOpacity="1.0">
             <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--<view:CardInPlayView  Width="84" Height="120"/>-->
                    <Viewbox HorizontalAlignment="Left"  MaxHeight="500">
                        <Canvas Width="84" Height="120">
                            <Ellipse Canvas.Top="5" Canvas.Left="5"  Width="78" Height="110">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding ArtImageSource}" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <Image Source="../Images/inplay_minion.png"
                                Width="84" Height="120"/>
                            <TextBlock Text="{Binding Attack}" Canvas.Left="13" Canvas.Top="80" FontSize="18" Foreground="White"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Health}" Canvas.Left="65" Canvas.Top="80" FontSize="18" Foreground="White"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Canvas>
                    </Viewbox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
